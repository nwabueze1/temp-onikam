{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "es6", "es2017", "esnext.asynciterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "typeRoots": ["./src/@types", "./node_modules/@types", "./node_modules/moment"],
    "types": [],
    "outDir": "dist",
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "downlevelIteration": true,
    "paths": {
      "react": ["./node_modules/@types/react"]
    }
  },
  "include": ["src/build.tsx", "src/theme.ts"],
  "exclude": [
    "lib",
    "./src/@types",
    "./src/stories",
    "./node_modules/@types",
    "src/types/graphql-global-types.ts"
  ]
}
